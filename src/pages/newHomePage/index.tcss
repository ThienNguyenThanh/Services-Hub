.main-container {
  margin: auto;
  width: 95%;
  height: 100vh;
}

.header-container {
  height: 40%;
  text-align: center;
}

.body-container {
  background-color: white;
  border-radius: 5px;
}

.body-container .header .title {
  font-weight: bold;
  position: relative;
  padding: 10px;
  padding-top: 10px;
}

.body-container .header .more {
  color: #1A94FF;
  position: relative;
  right: 10px;
  padding: 10px;
  font-size: smaller;
}

.app-img {
  margin: 30% 0 5% ;
  width: 35%;
  height: 20%;
}

